{
  "name": "@electrojet/phaser-ce",
  "version": "0.0.9",
  "description": "Build scripts for use with create-electrojet",
  "bin": {
    "electrojet-phaserce": "bin/electrojet-phaserce"
  },
  "scripts": {
    "format": "standard --fix && prettier --write src/**/*.{js,json}",
    "lint": "standard",
    "test": "jest",
    "watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "electrojet",
    "phaser-ce",
    "cli"
  ],
  "files": [
    "bin",
    "src"
  ],
  "license": "MIT",
  "dependencies": {
    "@electrojet/core": "^0.1.5",
    "chalk": "^2.4.1",
    "cosmiconfig": "^5.0.7",
    "cross-spawn": "^6.0.5",
    "enquirer": "^2.3.0",
    "expose-loader": "^0.7.5",
    "fs-jetpack": "^2.2.0",
    "meow": "^5.0.0",
    "ora": "^3.0.0",
    "phaser-ce": "^2.11.1"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.12.1",
    "standard": "^12.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agneym/electrojet-scripts"
  },
  "bugs": {
    "url": "https://github.com/agneym/electrojet-scripts/issues"
  }
}
