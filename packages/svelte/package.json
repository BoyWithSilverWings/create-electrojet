{
  "name": "@electrojet/svelte",
  "version": "0.0.14",
  "description": "Build scripts for use with create-electrojet",
  "bin": {
    "electrojet-svelte": "bin/electrojet-svelte"
  },
  "scripts": {
    "format": "standard --fix && prettier --write src/**/*.{js,json}",
    "lint": "standard",
    "test": "jest",
    "watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "electrojet",
    "svelte",
    "cli"
  ],
  "files": [
    "bin",
    "src"
  ],
  "license": "MIT",
  "dependencies": {
    "@electrojet/core": "^0.1.5",
    "chalk": "^2.4.1",
    "cosmiconfig": "^5.0.7",
    "cross-spawn": "^6.0.5",
    "enquirer": "^2.3.0",
    "html-webpack-plugin": "^3.2.0",
    "meow": "^5.0.0",
    "ora": "^3.0.0",
    "svelte-loader": "^2.13.6"
  },
  "devDependencies": {
    "husky": "^3.0.8",
    "jest": "^23.6.0",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "standard": "^14.3.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agneym/electrojet-scripts"
  },
  "bugs": {
    "url": "https://github.com/agneym/electrojet-scripts/issues"
  },
  "peerDependencies": {
    "svelte": "^3.12.1"
  }
}
