{
  "private": true,
  "workspaces": [
    "create-electrojet",
    "packages/*",
    "plugins/*"
  ],
  "name": "electrojet-cli",
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.8.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.12.1",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "@electrojet/carlo": "file:packages/carlo",
    "@electrojet/core": "file:packages/core",
    "@electrojet/electron": "file:packages/electron",
    "@electrojet/sass": "file:plugins/sass",
    "create-electrojet": "file:create-electrojet"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
