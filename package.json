{
  "name": "electrojet-cli",
  "version": "0.0.1",
  "description": "Electrojet CLI",
  "private": true,
  "bin": {
    "electrojet-cli": "bin/electrojet-cli"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,json} && standard --fix",
    "lint": "standard",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "src"
  ],
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^2.1.0",
    "gluegun": "next"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.12.1",
    "standard": "^12.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
